    <form class="row g-3 needs-validation" novalidate action="/updateData" method="post">
        <input type="text"  name="editid"  value="<%=single.id%>" style="color: white; border: 1px solid white;">
        <div class="col-md-12">
          <label for="validationCustom01" class="form-label">Movie Name</label>
          <input type="text" class="form-control"  id="validationCustom01" name="moviename"  value="<%=single.moviename%>" required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="col-md-6">
          <label for="validationCustom01" class="form-label">First name</label>
          <input type="text" class="form-control"  id="validationCustom01" name="fname" value="<%=single.fname%>" required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="col-md-6">
          <label for="validationCustom02" class="form-label">Last name</label>
          <input type="text" class="form-control" id="validationCustom02" name="lname" value="<%=single.lname%>" required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        </div>
        <div class="col-md-6">
          <label for="validationCustom03" class="form-label">City</label>
          <input type="text" class="form-control" name="city" id="validationCustom03" value="<%=single.city%>" required>
          <div class="invalid-feedback">
            Please provide a valid city.
          </div>
        </div>
        <div class="col-md-6">
          <label for="validationCustom05" class="form-label">State</label>
          <input type="text" class="form-control" name="state" id="validationCustom05" value="<%=single.state%>" required>
          <div class="invalid-feedback">
            Please provide a valid zip.
          </div>
        </div>
        <div class="col-md-6">
          <label for="validationCustom03" class="form-label">Row</label>
          <input type="text" class="form-control" name="row" id="validationCustom03" value="<%=single.row%>" required>
          <div class="invalid-feedback">
            Please provide a valid city.
          </div>
        </div>
        <div class="col-md-6">
          <label for="validationCustom05" class="form-label">Seat Number</label>
          <input type="text" class="form-control" name="seatnum" id="validationCustom05" value="<%=single.seatnum%>" required>
          <div class="invalid-feedback">
            Please provide a valid zip.
          </div>
        </div>
        <div class="col-12">
          <button class="btn btn-secondary" type="submit">Update Ticket</button>
        </div>
      </form>
   
